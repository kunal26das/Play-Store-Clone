<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="22dp"
        android:paddingEnd="12dp"
        android:paddingBottom="22dp">

        <LinearLayout
            style="@style/style_stats_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_app_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:paddingBottom="4dp"
                    android:text="5.0"
                    android:textColor="@color/blackColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/ic_star" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_app_reviews_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews Count"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/style_stats_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:paddingBottom="4dp"
                android:src="@mipmap/ic_download" />

            <TextView
                android:id="@+id/tv_app_download_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download Size"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/style_stats_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_app_age_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rectangle"
                android:paddingStart="1.5dp"
                android:paddingEnd="1.5dp"
                android:text="3+"
                android:textColor="@color/blackColor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_app_age_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating â“˜"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/style_stats_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_app_downloads_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:text="Count"
                android:textColor="@color/blackColor"
                android:textSize="14.5sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Downloads"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</HorizontalScrollView>